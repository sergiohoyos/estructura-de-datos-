#pragma once
class cuadrado
{
private:
	float lado;
public:
	cuadrado(float _lado);
	~cuadrado(void);
	float perimetro();
	float area();

};

#include "pch.h"
#include "cuadrado.h"
#include <iostream>
using namespace std;


cuadrado::cuadrado(float _lado)
{
	lado = _lado;
}


cuadrado::~cuadrado()
{

}
float cuadrado::area()
{

	float aux;
	aux =4  * lado;
	return aux;

}
